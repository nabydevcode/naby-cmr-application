{% extends 'base.html.twig' %}

{% block title %}Modifier le mot de passe
{% endblock %}

{% block body %}
	<div class="min-h-screen flex items-center justify-center bg-gray-100">
		<div class="max-w-md w-full bg-white p-8 rounded-lg shadow-md">
			<h1 class="text-2xl font-bold text-center mb-6 text-gray-800">Modifier votre mot de passe</h1>

			{% for message in app.flashes('success') %}
				<div class="mb-4 p-3 bg-green-100 text-green-700 rounded">{{ message }}</div>
			{% endfor %}

			{{ form_start(form, {'attr': {'class': 'space-y-4'}}) }}
			{{ form_row(form.newPassword) }}
			{{ form_row(form.confirmPassword) }}
			<button type="submit" class="w-full bg-blue-600 text-white py-2 px-4 rounded-lg font-semibold hover:bg-blue-700 transition">Modifier</button>
			{{ form_end(form) }}
		</div>
	</div>
{% endblock %}
