{% extends 'base.html.twig' %}

{% block title %}Hello MainController!
{% endblock %}

{% block body %}
	<div class="flex justify-center mt-10">
		<div class="bg-white py-6 px-8 rounded-lg shadow-lg w-full max-w-lg">
			<div id="form-container">
				<h2 class="text-2xl font-bold text-center mb-6">Formulaire CMR
				</h2>
				{{ form_start(form, {'method':'POST','attr': {'id': 'shipment-form', 'class': 'space-y-6'}}) }}
				{{ form_widget(form) }}
				<div class="text-center mt-6">
					<button type="submit" class="w-full bg-gray-900 text-white py-2 px-4 rounded-lg font-semibold hover:bg-gray-600 transition duration-300">
						Soumettre
					</button>
				</div>
				{{ form_end(form) }}
			</div>
		</div>
	</div>

{% endblock %}
