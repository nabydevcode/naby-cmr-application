{% extends 'base.html.twig' %}

{% block title %}Formulaire CMR
{% endblock %}

{% block body %}
	<div class="flex justify-center mt-10">
		<div class="bg-white py-6 px-8 rounded-lg shadow-lg w-full max-w-lg">
			<div id="form-container">
				<h2 class="text-2xl font-bold text-center mb-6">Formulaire CMR</h2>

				{# ✅ Affichage des erreurs globales (ex: UniqueEntity) #}


				{{ form_start(form, {'method': 'POST', 'attr': {'id': 'shipment-form', 'class': 'space-y-6'}}) }}

				{# Affichage des erreurs de formulaire (liées à chaque champ) #}
				{{ form_errors(form) }}

				{# Affichage de tous les champs du formulaire #}
				{{ form_widget(form) }}

				<div class="text-center mt-6">
					<button type="submit" class="w-full bg-gray-900 text-white py-2 px-4 rounded-lg font-semibold hover:bg-gray-600 transition duration-300">
						Soumettre
					</button>
				</div>

				{{ form_end(form) }}
				{% for error in form.vars.errors %}
					<div class="mb-4 p-3 text-sm text-red-800 bg-red-100 rounded-lg" role="alert">
						{{ error.message }}
					</div>
				{% endfor %}
			</div>
		</div>
	</div>
{% endblock %}
