{% extends 'base.html.twig' %}

{% block title %}Recherche CMR
{% endblock %}

{% block body %}
	<div class="flex justify-center items-center min-h-screen bg-gray-100 px-4">
		<div class="w-full max-w-lg bg-white p-6 rounded-lg shadow-lg">
			<h2 class="text-2xl font-semibold text-gray-700 text-center mb-4">Rechercher un CMR</h2>
			<p class="text-gray-500 text-center mb-6">Entrez le numéro de référence pour retrouver un CMR.</p>

			{{ form_start(form, {'attr': {'class': 'space-y-4'}}) }}

			<div>
				{{ form_label(form.ref, 'Numéro de référence', {'label_attr': {'class': 'block text-gray-700 font-medium'}}) }}
				{{ form_widget(form.ref, {'attr': {'class': 'w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500'}}) }}
				{{ form_errors(form.ref, {'attr': {'class': 'text-red-500 text-sm'}}) }}
			</div>

			<div class="text-center mt-2">
				<button type="submit" class="w-full bg-gray-900 hover:bg-gray-900 text-white font-semibold py-2 rounded-lg shadow-md transition duration-300">
					Rechercher
				</button>
			</div>

			{{ form_end(form) }}
		</div>
	</div>

{% endblock %}
